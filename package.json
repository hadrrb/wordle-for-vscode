{
  "name": "vscode-wordle",
  "displayName": "Wordle for VSCode",
  "description": "Play Wordle in your VSCode",
  "version": "1.0.0",
  "keywords": ["wordle", "word game", "game"],
  "author": {
    "name": "Ramzi Hadrich",
    "email": "hadrichb@gmail.com"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hadrrb/wordle-for-vscode"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:wordle-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Wordle",
        "properties": {
          "wordle.defaultLang": {
            "type": "string",
            "description": "Default Wordle Language",
            "default": "English",
            "enum": [
              "English",
              "German",
              "French",
              "Polish",
              "Spanish",
              "Italian",
              "Portuguese",
              "Swedish",
              "Arabic",
              "Russian",
              "Mathematics"
            ]
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wordle-container",
          "title": "Wordle",
          "icon": "./resources/wordle.svg"
        }
      ]
    },
    "views": {
      "wordle-container": [
        {
          "id": "wordle-view",
          "name": "Wordle",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "wordle.change-language",
        "title": "Language"
      },
      {
        "command": "wordle.height-add",
        "title": "Height +"
      },
      {
        "command": "wordle.height-min",
        "title": "Height -"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "wordle.change-language",
          "when": "view == wordle-view",
          "group": "navigation"
        },
        {
          "command": "wordle.height-add",
          "when": "view == wordle-view",
          "group": "navigation"
        },
        {
          "command": "wordle.height-min",
          "when": "view == wordle-view",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4",
    "ts-loader": "^9.2.6",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "@vscode/test-electron": "^2.0.3"
  }
}
